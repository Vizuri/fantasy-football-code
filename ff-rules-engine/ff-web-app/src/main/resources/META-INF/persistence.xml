<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<persistence-unit name="fantasy-football-unit">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.vizuri.fantasy.entity.BaseEntity</class>
		<class>com.vizuri.fantasy.entity.FantasyLeague</class>
		<class>com.vizuri.fantasy.entity.FantasyLeagueRoster</class>
		<class>com.vizuri.fantasy.entity.FantasyLeagueStandings</class>
		<class>com.vizuri.fantasy.entity.FantasyOwner</class>
		<class>com.vizuri.fantasy.entity.FantasyTeam</class>
		<class>com.vizuri.fantasy.entity.FantasyTeamRoster</class>
		<class>com.vizuri.fantasy.entity.Player</class>
		<class>com.vizuri.fantasy.entity.PlayerMatchStatistic</class>
		<class>com.vizuri.fantasy.entity.PlayerStatus</class>
		<class>com.vizuri.fantasy.entity.Position</class>
		<class>com.vizuri.fantasy.entity.ScheduledMatch</class>
		<class>com.vizuri.fantasy.entity.StatisticType</class>
		<class>com.vizuri.fantasy.entity.Team</class>
		<class>com.vizuri.fantasy.entity.TeamBye</class>
		<class>com.vizuri.fantasy.entity.OverallRanking</class>
		<class>com.vizuri.fantasy.entity.PositionRanking</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.connection.url" value="jdbc:h2:~/tmp/fantasy-football;AUTO_SERVER=TRUE" />
			<property name="jboss.as.jpa.managed" value="false" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>